# SkyBoot Core API - Development Environment Configuration
# 개발 환경 설정 파일 예시

# =============================================================================
# 데이터베이스 설정 (Database Configuration)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/skybootcore?client_encoding=utf8
SQL_DEBUG=true

# =============================================================================
# JWT 보안 설정 (JWT Security Configuration)
# =============================================================================
SECRET_KEY=dev-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# 서버 설정 (Server Configuration)
# =============================================================================
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# CORS 설정 (CORS Configuration)
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# =============================================================================
# 로깅 설정 (Logging Configuration)
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed
LOG_FILE_PATH=./logs/skyboot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=3

# =============================================================================
# 파일 업로드 설정 (File Upload Configuration)
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip

# =============================================================================
# 보안 설정 (Security Configuration)
# =============================================================================
API_RATE_LIMIT=10000/hour
REQUEST_SIZE_LIMIT=50MB
SESSION_TIMEOUT=7200

# =============================================================================
# 데이터베이스 연결 풀 설정 (Database Pool Configuration)
# =============================================================================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# =============================================================================
# 캐시 설정 (Cache Configuration)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=1800

# =============================================================================
# 모니터링 설정 (Monitoring Configuration)
# =============================================================================
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# =============================================================================
# 이메일 설정 (Email Configuration)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=false
FROM_EMAIL=dev@localhost

# =============================================================================
# 백업 설정 (Backup Configuration)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =============================================================================
# SSL/TLS 설정 (SSL/TLS Configuration)
# =============================================================================
SSL_ENABLED=false

# =============================================================================
# 개발 도구 설정 (Development Tools Configuration)
# =============================================================================
RELOAD=true
AUTO_RELOAD=true
DEV_MODE=true